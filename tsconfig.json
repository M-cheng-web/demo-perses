{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationDir": "./types",
    "baseUrl": ".",
    "paths": {
      "@grafana-fast/component": ["./packages/component/index.ts"],
      "@grafana-fast/component/*": ["./packages/component/*"],
      "@grafana-fast/hooks": ["./packages/hooks/index.ts"],
      "@grafana-fast/hooks/*": ["./packages/hooks/*"],
      "@grafana-fast/types": ["./packages/types/index.ts"],
      "@grafana-fast/types/*": ["./packages/types/*"],
      "@grafana-fast/metadata": ["./packages/metadata/metadata.ts"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "packages",
    "packages/.vitepress/components/*.vue",
    "packages/.vitepress/*.ts",
    "meta",
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/**/*.md",
    "**/dist",
    "packages/.test"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
