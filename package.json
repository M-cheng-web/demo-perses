{
  "name": "@grafana-fast/monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "A fast dashboard library based on Vue 3",
  "license": "MIT",
  "author": "grafana-fast",
  "scripts": {
    "build": "pnpm run update && esno scripts/build.ts",
    "build:rollup": "cross-env NODE_OPTIONS=\"--max-old-space-size=6144\" rollup -c",
    "build:types": "tsc --emitDeclarationOnly && pnpm run types:fix",
    "dev": "pnpm run update && pnpm run docs",
    "dev:skip-update": "vitepress dev packages --open",
    "docs": "vitepress dev packages --open",
    "docs:serve": "vitepress serve packages",
    "docs:build": "pnpm run update:full && vitepress build packages",
    "playground": "cd playground && vite",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "types:fix": "esno scripts/fix-types.ts",
    "update": "pnpm -C packages/metadata update && esno scripts/update.ts",
    "update:full": "pnpm run update && pnpm run build:types",
    "clean": "rimraf dist types packages/*/dist",
    "watch": "esno scripts/build.ts --watch",
    "publish": "esno scripts/publish.ts"
  },
  "devDependencies": {
    "@grafana-fast/component": "workspace:*",
    "@grafana-fast/hooks": "workspace:*",
    "@grafana-fast/types": "workspace:*",
    "@grafana-fast/metadata": "workspace:*",
    "@rollup/plugin-babel": "^6.0.2",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^22.12.0",
    "@types/prettier": "^2.7.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^2.1.1",
    "autoprefixer": "^10.4.13",
    "bumpp": "^8.2.1",
    "consola": "^2.15.3",
    "cross-env": "^7.0.3",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.17.0",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.12",
    "fs-extra": "^10.1.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "markdown-table": "^3.0.2",
    "postcss": "^8.4.19",
    "prettier": "^3.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^3.2.3",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-esbuild": "^4.10.1",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.94.0",
    "less": "^4.4.2",
    "simple-git": "^3.14.1",
    "typescript": "~5.9.3",
    "vite": "^7.2.2",
    "vitepress": "^1.0.0",
    "vue": "^3.5.24"
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.2.2"
    }
  },
  "dependencies": {
    "vue": "^3.5.24",
    "dayjs": "^1.11.19"
  }
}
