{
  "name": "@grafana-fast/monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@7.6.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preinstall": "node ./scripts/ensure-pnpm.mjs",
    "postinstall": "node ./scripts/link-nr.mjs",
    "build": "nr update && esno scripts/build.ts && pnpm dist:validate",
    "dev": "nr update && nr -C packages/app dev",
    "docs": "nr update && nr -C packages/docs docs:dev",
    "docs:build": "nr update && nr -C packages/docs docs:build",
    "docs:serve": "nr update && nr -C packages/docs docs:serve",
    "lint": "eslint --cache \"packages/**/*.{ts,tsx,vue,js,cjs,mjs}\" \"scripts/**/*.{ts,js,cjs,mjs}\" \"meta/**/*.{ts,js,cjs,mjs}\"",
    "lint:fix": "eslint --cache --fix \"packages/**/*.{ts,tsx,vue,js,cjs,mjs}\" \"scripts/**/*.{ts,js,cjs,mjs}\" \"meta/**/*.{ts,js,cjs,mjs}\"",
    "format": "prettier --check .",
    "typecheck": "pnpm run typecheck:dist",
    "typecheck:dist": "nr update && pnpm -C packages/dashboard run build:types && pnpm -r --if-present run type-check",
    "typecheck:dev": "nr update && pnpm -r --filter \"!@grafana-fast/hooks\" --if-present run type-check && pnpm -C packages/hook run type-check:dev",
    "test": "nr update && pnpm -r --if-present run test",
    "update": "esno scripts/update.ts",
    "clean": "esno scripts/clean.ts",
    "types:fix": "esno scripts/sync-dist-meta.ts",
    "dist:validate": "esno scripts/validate-dist.ts",
    "ci": "pnpm clean && pnpm lint && pnpm format && pnpm build && pnpm typecheck && pnpm test",
    "publish": "esno scripts/publish.ts"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.25.12"
    }
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.0",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/compiler-sfc": "^3.5.24",
    "@vue/tsconfig": "^0.8.1",
    "consola": "^2.15.3",
    "esbuild": "0.25.12",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-define-config": "1.23.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.17.0",
    "esno": "^4.8.0",
    "fast-glob": "^3.2.12",
    "fs-extra": "^10.1.0",
    "prettier": "^3.0.2",
    "rollup": "^4.24.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3",
    "vite": "^7.2.2",
    "vue": "^3.5.24",
    "vue-tsc": "^3.1.3"
  },
  "engines": {
    "node": ">=20.19.0"
  }
}
