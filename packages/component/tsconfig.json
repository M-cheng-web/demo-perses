{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "/@/*": ["src/*"],
      "@grafana-fast/component": ["src/index.ts"],
      "@grafana-fast/types": ["../types/src/index.ts"],
      "@grafana-fast/types/*": ["../types/src/*"]
    },
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "composite": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.json"],
  "references": [{ "path": "../types" }]
}
